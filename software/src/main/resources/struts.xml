<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="protExpressParams"
                class="gov.nih.nci.protexpress.ui.interceptors.DisplayTagParametersInterceptor" />

            <interceptor-stack name="protExpressParamsPrepareParamsStack">
                <interceptor-ref name="exception" />
                <interceptor-ref name="alias" />
                <interceptor-ref name="protExpressParams" />
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare" />
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="modelDriven" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="checkbox" />
                <interceptor-ref name="staticParams" />
                <interceptor-ref name="protExpressParams" />
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
            </interceptor-stack>

            <interceptor-stack name="protExpressDefaultStack">
                <interceptor-ref name="exception" />
                <interceptor-ref name="alias" />
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare" />
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="debugging" />
                <interceptor-ref name="profiling" />
                <interceptor-ref name="scopedModelDriven" />
                <interceptor-ref name="modelDriven" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="checkbox" />
                <interceptor-ref name="staticParams" />
                <interceptor-ref name="protExpressParams">
                    <param name="excludeParams">dojo\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="protExpressDefaultStack" />

        <default-action-ref name="UnderConstruction" />
        <action name="UnderConstruction">
            <result>/notYetImplemented.jsp</result>
        </action>

        <!-- Registration Actions -->
        <action name="registration/*"
            class="gov.nih.nci.protexpress.ui.actions.registration.RegistrationAction" method="{1}">
            <result name="success">/WEB-INF/jsp/registration/success.jsp</result>
            <result name="input">/WEB-INF/jsp/registration/registration.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>
        <!-- /Registration Actions -->

        <!-- Home Actions -->
        <action name="home/home" class="gov.nih.nci.protexpress.ui.actions.home.HomeAction" method="load">
            <result name="success">/WEB-INF/jsp/home/home.jsp</result>
        </action>
        <!-- /Home Actions -->

        <!-- Search Actions -->
        <action name="search/*" class="gov.nih.nci.protexpress.ui.actions.search.SearchAction" method="{1}">
            <result name="input">/WEB-INF/jsp/search/search.jsp</result>
            <result name="success">/WEB-INF/jsp/search/search.jsp</result>
        </action>
        <action name="ajax/search/*" class="gov.nih.nci.protexpress.ui.actions.search.SearchAction" method="{1}">
            <result name="input">/WEB-INF/jsp/search/searchResults.jsp</result>
            <result name="success">/WEB-INF/jsp/search/searchResults.jsp</result>
        </action>
        <!-- /Search Actions -->

        <!-- Protocol Actions -->
        <action name="protocol/*" class="gov.nih.nci.protexpress.ui.actions.protocol.ProtocolManagementAction" method="{1}">
            <result name="viewProtocolDetails">/WEB-INF/jsp/protocol/viewProtocolDetails.jsp</result>
            <result name="editProtocolDetails">/WEB-INF/jsp/protocol/editProtocolDetails.jsp</result>
            <result name="input">/WEB-INF/jsp/protocol/editProtocolDetails.jsp</result>
            <result name="success">/WEB-INF/jsp/protocol/editProtocolDetails.jsp</result>
            <result name="deleteProtocol" type="chain">search/reloadSearch</result>
            <result name="cancel">/WEB-INF/jsp/protocol/viewProtocolDetails.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>
        <!-- /Protocol Actions -->

        <!-- Create Experiment Actions -->
        <action name="createExperiment/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.ManageExperimentAction" method="{1}">
            <result name="input">/WEB-INF/jsp/createexperiment/experiment/experimentOverview.jsp</result>
             <result name="createNewExperiment" type="redirect-action">createExperiment/load</result>
            <result name="success" type="redirect-action">createExperiment/protocols/add/addNewProtocol</result>
            <result name="experimentSummary">/WEB-INF/jsp/createexperiment/experiment/experimentSummary.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

        <action name="createExperiment/protocols/add/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.AddProtocolAction" method="{1}">
            <result name="input">/WEB-INF/jsp/createexperiment/protocol/addNewProtocol.jsp</result>
            <result name="success" type="redirect-action">createExperiment/protocols/inputs/load</result>
            <result name="selectExistingProtocol">/WEB-INF/jsp/createexperiment/protocol/selectExistingProtocol.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

       <action name="createExperiment/protocols/manage/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.ManageProtocolApplicationAction" method="{1}">
            <result name="input">/WEB-INF/jsp/createexperiment/protocol/editProtocol.jsp</result>
            <result name="viewProtocol">/WEB-INF/jsp/createexperiment/protocol/reviewProtocol.jsp</result>
            <result name="editProtocol">/WEB-INF/jsp/createexperiment/protocol/editProtocol.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

        <action name="ajax/createExperiment/protocols/add/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.AddProtocolAction" method="{1}">
            <result name="selectExistingProtocol">/WEB-INF/jsp/createexperiment/protocol/protocolSearchResults.jsp</result>
            <result name="success">/WEB-INF/jsp/createexperiment/protocol/protocolSearchResults.jsp</result>
        </action>

        <action name="createExperiment/protocols/inputs/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.ManageProtocolInputsAction" method="{1}">
            <result name="input">/WEB-INF/jsp/createexperiment/protocol/manageInputs.jsp</result>
            <result name="success" type="redirect-action">createExperiment/protocols/outputs/load</result>
            <result name="addNewInput"  type="redirect-action">createExperiment/protocols/inputs/load</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

        <action name="ajax/createExperiment/protocols/inputs/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.ManageProtocolInputsAction" method="{1}">
            <result name="addNewInput">/WEB-INF/jsp/createexperiment/protocol/inputs.jsp</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

        <action name="createExperiment/protocols/outputs/*" class="gov.nih.nci.protexpress.ui.actions.experiment.create.ManageProtocolOutputsAction" method="{1}">
            <result name="input">/WEB-INF/jsp/createexperiment/protocol/manageOutputs.jsp</result>
            <result name="success" type="redirect-action">createExperiment/protocols/manage/reviewProtocol</result>
            <result name="addNewOutput"  type="redirect-action">createExperiment/protocols/outputs/load</result>
            <interceptor-ref name="protExpressParamsPrepareParamsStack" />
        </action>

        <!-- /Create Experiment Actions -->

    </package>
</struts>